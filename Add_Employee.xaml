<Page x:Class="FitnessApp.Add_Employee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnessApp"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="500"
      Title="Add_Employee">

    <Grid Background="White">
        
        <StackPanel Margin="10 10 10 55">
            <TextBox x:Name="NameBox" materialDesign:HintAssist.Hint="Имя" Height="30"/>
            <TextBox x:Name="SurnameBox" materialDesign:HintAssist.Hint="Фаимилия" Height="30"/>
            <TextBox x:Name="SecondNameBox" materialDesign:HintAssist.Hint="Отчество" Height="30"/>
            <TextBox x:Name="PhoneNumberBox" materialDesign:HintAssist.Hint="Номер телефона (формат +7)" Height="30"/>
            <TextBox x:Name="EmailBox" materialDesign:HintAssist.Hint="E-mail" Height="30"/>
           
        </StackPanel>

        <Button x:Name="But_Create_Employee" Click="But_Create_Employee_Click"  Margin="10" Width="180" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#FF3B533C" Foreground="White" BorderBrush="{x:Null}">Создать сотрудника</Button>
    </Grid>
</Page>
